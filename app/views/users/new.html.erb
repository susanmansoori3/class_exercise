<h1>Sign Up</h1>
<body>

<div class="body"></div>
	<div class="grad"></div>
		<div class="header">
			<div>Sign Up</div>
		</div>
		<br>
		<div class="login">

        <%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
                <% flash.each do |name, msg| -%>
                <%= content_tag :div, msg, class: name %>
                <% end %>
                <%= f.text_field :first_name, placeholder: "first name" %><br /><br />
                <%= f.text_field :last_name, placeholder: "last name" %><br /><br />
                <%= f.text_field :email, placeholder: "email" %><br />
                <%= f.password_field :password, placeholder: "password" %><br />
                <%= f.password_field :password_confirmation, placeholder: "password confirmation" %><br />
                <%= f.file_field :photo %><br />
                <%= f.submit "Sign Up"%>
        <% end %>



    </div>

</body>
